spring:
  datasource:
    url: jdbc:mariadb://localhost:3306/PROJECT_DATABASE_NAME
    driver-class-name: org.mariadb.jdbc.Driver
    username: PROJECT_DATABSE_USERNAME
    password: PROJECT_DATABSE_PASSWORD

  jpa:
    open-in-view: false
    generate-ddl: true
    show-sql: true
    hibernate:
      ddl-auto: update
    # hibernate properties
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL5InnoDBDialect

## App Properties
app:
  jwt-secret: JWT_SECRET
  jwt-expiration-milliseconds: 604800000 # 7 days